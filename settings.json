{
    "window.zoomLevel": 0,
    "workbench.iconTheme": "vscode-icons",
    "editor.minimap.enabled": false,
    "python.linting.pylintArgs": [
        "--disable=W0301", 
        "--disable=W0312",
        "--disable=C0325",
        "--disable=R,C"
    ],
    "cSpell.userWords": [
        "chdir",
        "getch",
        "isdir",
        "isfile",
        "msvcrt",
        "shutil"
    ],
    "window.menuBarVisibility": "default",
}